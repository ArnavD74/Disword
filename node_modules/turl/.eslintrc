{
  "extends": "airbnb",
  "env": {
    "node":true,
    "mocha":true,
    "es6": true,
    "mongo":true
  },
  "rules": {
    // disable requiring trailing commas
    "comma-dangle": 0,
    "arrow-body-style": 0,
    "max-len": ["error", {"code": 120, "ignoreComments": true, "ignoreUrls": true}],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
  }
}
